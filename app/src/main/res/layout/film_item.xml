<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/film_photo"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10sp"
            android:scaleType="fitXY"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_live_tv_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/film_photo"
            android:layout_alignParentTop="true"
            android:layout_alignRightOf="@+id/film_photo"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/film_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Name of film"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/film_zhanr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="genre"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/film_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="minute"
                android:textColor="@color/black"
                android:textSize="15dp" />




        </LinearLayout>
    </RelativeLayout>

</LinearLayout>